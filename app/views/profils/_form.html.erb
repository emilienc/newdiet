<%= form_for @profil, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    

    <div class="control-group">
      <%= f.label :taille, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :taille, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :birthday, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :birthday, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :sexe, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :sexe, :class => 'text_field' %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', profils_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
